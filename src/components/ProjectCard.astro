---
import { Image } from "@astrojs/image/components"
import Badge from "./Badge.astro"
const { img, technologies, name, description } = Astro.props
---

<div
  class="snap-center p-4 flex-shrink-0 peer inline-block transition origin-center w-96 h-56 bg-white rounded-lg shadow-xl text-xs"
>
  <div class="flex items-center mb-4">
    <Image src={img} format="png" width={100} height={33} />
    <h4 class="ml-4 text-zinc-600 text-base">{name}</h4>
  </div>
  <p><strong class="text-zinc-600">Description:</strong> {description}</p>
  <p class="mt-4 flex flex-wrap items-baseline gap-2">
    <strong class="text-zinc-600">Techologies:</strong>
    {technologies.map((tech: string) => <Badge>{tech}</Badge>)}
  </p>
</div>
